@model Erp.Models.People.Person

@{
    ViewData["Title"] = "Edit";
    var GenderId = (SelectList)ViewData["GenderId"];
    var i = GenderId.Any();
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Person</h4>
        <hr />
